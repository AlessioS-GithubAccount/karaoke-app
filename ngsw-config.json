{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/media/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "api",
      "urls": [
        "https://karaoke-app-6byu.onrender.com/**"
      ],
      "cacheConfig": {
        "maxSize": 100,
        "maxAge": "5m",
        "timeout": "8s",
        "strategy": "freshness"
      }
    }
  ],
  "navigationUrls": [
    "/**",
    "!/api/**",
    "!/assets/**",
    "!/_headers",
    "!/_redirects"
  ]
}
